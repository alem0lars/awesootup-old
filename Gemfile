source :rubygems


group :nanoc do
  # Static website generator
  gem 'nanoc'
  # Used to validate the html and css
  gem 'w3c_validators'
  # Used to preview the website
  gem 'adsf'
  # Allow to watch for changes
  gem 'listen'
  # Allow for events notifications
  gem 'rb-inotify', '~> 0.9'
end

group :assets do
  # CSS Framework
  gem 'zurb-foundation'

  gem 'compass'
end

